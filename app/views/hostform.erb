<div class="container">
  <div class="row">
    <div class="well col-sm-offset-1 col-sm-10">
      <div class="row">
        <div class="sign-up col-sm-6">
          <form role="form" action="/newhost/update" method="post">
            <h3 class="text-center">Become a Host</h3>
            <div class="form-group">
              <label for="cafe_location">Location</label>
              <input type="address" class="form-control" name="cafe_location" placeholder="Enter address">
            </div>
              <div class="form-group">
                <label for="cafe_about">About Your Space</label><br>
                <input type="text" class="form-control" name="cafe_about" placeholder="Enter description">
                <label for="rules">Check all that apply</label><br>
                <input type="checkbox" name="outdoor_area" value="TRUE">Outdoor area<br>
                <input type="checkbox" name="smoking_ok" value="TRUE">Smoking OK<br>
              </div>
            <button type="submit" class="btn btn-primary">Make Coffee</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
